        <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
        <script src="https://unpkg.com/htmx.org@1.9.11"></script>
        <style>
            button {
                height: 50px;
                width: 200px;
            }
            .active {
                background-color:  #27ae60;
            }
            .dormant {
